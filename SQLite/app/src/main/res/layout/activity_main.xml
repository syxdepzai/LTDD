<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/containerButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Demo lưu trữ &amp; SQLite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <Button
            android:id="@+id/buttonNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ví dụ SQLite Notes" />

        <Button
            android:id="@+id/buttonInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ví dụ lưu tập tin - Bộ nhớ trong" />

        <Button
            android:id="@+id/buttonExternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ví dụ lưu tập tin - Bộ nhớ ngoài" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
